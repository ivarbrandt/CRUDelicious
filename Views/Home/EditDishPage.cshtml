@model Dishes

<div class="row justify-content-center my-3">
  <h3>@Model.Name</h3>
</div>
<div class="row mb-4">
  <h5><a href="/">Home</a></h5>
</div>

<form class="row" asp-action="EditDish" asp-controller="Home" method="POST">
  <div class="col">
    <div class="row my-4 m-3">
      <input type="hidden" asp-for="DishID" />
      <input type="hidden" asp-for="CreatedAt" />
      <label asp-for="Chef"></label>
      <span asp-validation-for="Chef"></span>
      <input class="form-control" asp-for="Chef" />
    </div>
    <div class="row my-4 m-3">
      <label asp-for="Name"></label>
      <span asp-validation-for="Name"></span>
      <input class="form-control" asp-for="Name" />
    </div>
    <div class="row my-4 m-3">
      <label asp-for="Calories"></label>
      <span asp-validation-for="Calories"></span>
      <input class="form-control" asp-for="Calories" />
    </div>
  </div>
  <div class="col">
    <div class="row my-4 m-3">
      <label asp-for="Tastiness"></label>
      <span asp-validation-for="Tastiness"></span>
      <select asp-for="Tastiness" class="form-control">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
      </select>
    </div>
  </div>
  <div class="col">
    <div class="row my-4 m-3">
      <label asp-for="Description"></label>
      <span asp-validation-for="Description"></span>
      <textarea asp-for="Description" cols="30" rows="7"></textarea>
    </div>
    <button class="btn btn-outline-primary my-4 m-3">Edit Dish</button>
  </div>
</form>
